generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for email/password auth

  // Streak tracking
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastPlayedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts     Account[]
  sessions     Session[]
  subscription Subscription?
  attempts     Attempt[]
  hintUses     HintUse[]
  progress     Progress[]
}

model Subscription {
  id                 String   @id @default(cuid())
  userId             String   @unique
  stripeCustomerId   String   @unique
  stripeSubscriptionId String? @unique
  status             String   @default("inactive") // active, canceled, past_due, inactive
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Puzzle {
  id              String   @id @default(cuid())
  dateKey         String   @unique // YYYY-MM-DD in Melbourne time
  puzzleNumber    Int      @unique
  difficulty      String   @default("hard") // easy, medium, hard

  // Rule definition
  ruleProgramType   String // e.g., "ARITHMETIC_SEQUENCE", "GEOMETRIC", etc.
  ruleProgramParams String // JSON string of parameters

  // Category tags for filtering/display
  tags            String // JSON array of tags like ["DIFFERENCES", "INCREASING"]

  // Sequences data
  primarySequence String // JSON array of the main sequence numbers
  sequences       String // JSON array of all sequences (including primary)
  answers         String // JSON array of next values for each sequence

  // Hints and explanation
  hints           String // JSON array of 2 hint strings
  explanation     String // Post-solve explanation of the rule

  // Metadata
  isPublished     Boolean  @default(true)
  isFallback      Boolean  @default(false) // true if from backup puzzles
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  attempts Attempt[]
  hintUses HintUse[]
  progress Progress[]
}

model Attempt {
  id            String   @id @default(cuid())
  userId        String
  puzzleId      String
  attemptNumber Int      // 1-5
  guessValue    Int
  correct       Boolean
  createdAt     DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzle Puzzle @relation(fields: [puzzleId], references: [id], onDelete: Cascade)

  @@index([userId, puzzleId])
}

model HintUse {
  id        String   @id @default(cuid())
  userId    String
  puzzleId  String
  hintIndex Int      // 1 or 2
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzle Puzzle @relation(fields: [puzzleId], references: [id], onDelete: Cascade)

  @@unique([userId, puzzleId, hintIndex])
  @@index([userId, puzzleId])
}

model Progress {
  id           String    @id @default(cuid())
  userId       String
  puzzleId     String
  solved       Boolean   @default(false)
  attemptsUsed Int       @default(0)
  hintsUsed    Int       @default(0)
  finishedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzle Puzzle @relation(fields: [puzzleId], references: [id], onDelete: Cascade)

  @@unique([userId, puzzleId])
}
